{
  "presets": [
    "react",
    ["latest", {
      "es2015": {
        "modules": false
      }
    }]
  ],
  "plugins": [
    "react-hot-loader/babel",
    "jsx-control-statements",
    "transform-export-extensions",
    "transform-class-properties",
    ["transform-object-rest-spread", { "useBuiltIns": true }],
    ["transform-regenerator", {
      "async": false
    }],
    ["transform-runtime", {
      "helpers": false,
      "polyfill": false,
      "regenerator": true
    }]
  ],
  "env": {
    "test": {
      "plugins": ["jsx-control-statements", "transform-es2015-modules-commonjs"]
    }
  }
}