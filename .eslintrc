{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "jest": true,
    "es6": true,
    "jsx-control-statements/jsx-control-statements": true
  },
  "globals": {
    "module": true,
    "process": true
  },
  "extends": [
    "airbnb",
    "plugin:jsx-control-statements/recommended"
  ],
  "plugins": ["react", "jsx-control-statements", "import"],
  "settings": {
    "import/resolver": { "webpack" : { "config": "config/webpack.config.js" } }
  },
  "rules": {
    "semi": ["error", "never"],
    "no-underscore-dangle": ["error", { "allow": ["__"] }],
    "no-console": ["warn", { "allow": ["error"] }],
    "max-len": ["error", 120, 4, {"ignoreComments": true, "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true}],
    "jsx-quotes": ["error", "prefer-double"],
    "react/require-default-props": "off",
    "react/forbid-prop-types": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "react/prop-types": "error",
    "react/jsx-key": "error",
    "react/jsx-max-props-per-line": ["error", { "maximum": 1, "when": "multiline" }],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "./config/**",
        "**/__stories__/**",
        "**/__tests__/**",
        "**/*.test.js"
      ]
    }],
    "import/order": ["error", {
      "groups": [
        ["builtin", "external"],
        ["internal", "parent", "sibling", "index"]
      ],
      "newlines-between": "always"
    }],
    "import/named": "error",
    "import/default": "error"
  }
}